package com.wipro.balaji.service;

import java.util.List;

import org.springframework.stereotype.Service;

import com.wipro.balaji.dto.CustomerRequest;
import com.wipro.balaji.dto.CustomerResponse;
import com.wipro.balaji.dto.KycDocumentRequest;
import com.wipro.balaji.dto.KycDocumentResponse;

@Service
public interface CustomerService {

	CustomerResponse createCustomer(CustomerRequest request);

	CustomerResponse getCustomer(Long id);

	List<CustomerResponse> getAllCustomers();

	KycDocumentResponse uploadKyc(KycDocumentRequest request);

	KycDocumentResponse updateKycStatus(Long docId, String status);

}
